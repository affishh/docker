pipeline {
    agent any

    environment {
        REGISTRY = "docker.io/affishh"
        IMAGE = "bluegreenapp"
        BLUE_PORT = "8080"
        GREEN_PORT = "8081"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git 'https://github.com/affishh/docker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                docker build -t $REGISTRY/$IMAGE:latest .
                """
            }
        }

        stage('Run Tests') {
            steps {
                sh """
                docker run --rm $REGISTRY/$IMAGE:latest npm test
                """
            }
        }

        stage('Push Image') {
            steps {
                sh """
                echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin
                docker push $REGISTRY/$IMAGE:latest
                """
            }
        }

        stage('Deploy GREEN Environment') {
            steps {
                sh """
                docker rm -f green || true

                docker run -d --name green -p ${GREEN_PORT}:3000 $REGISTRY/$IMAGE:latest
                """
            }
        }

        stage('Smoke Test GREEN') {
            steps {
                sh """
                echo "Testing GREEN..."
                sleep 3
                curl -f http://localhost:${GREEN_PORT}/health
                """
            }
        }

        stage('Switch Traffic BLUE → GREEN') {
            steps {
                sh """
                echo "Switching Traffic..."

                # Remove old BLUE
                docker rm -f blue || true

                # Promote GREEN to BLUE (becomes live)
                docker rename green blue
                """
            }
        }
    }

    post {
        success {
            echo "Blue-Green Deployment Completed Successfully!"
        }
        failure {
            echo "Deployment Failed – Blue Environment Still Active!"
        }
    }
}
